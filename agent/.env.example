# Central API endpoint
BACKEND_URL=http://localhost:5002/api/ingest

# Comma-separated list of log files to tail
LOG_FILES=./access.log,./app.log

# Metadata tags
APP_NAME=my-web-server
VM_ID=vm-01

# Batching and flush interval
BATCH_SIZE=100
FLUSH_INTERVAL_MS=5000

# Tail from end of file on startup (skip historical logs)
TAIL_FROM_END=0

# Enable polling for network filesystems (slower but more compatible)
USE_POLLING=0
