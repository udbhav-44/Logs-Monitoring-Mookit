BACKEND_URL=http://172.27.13.44:5002/api/ingest
# Comma separated list of files or folders to watch (folders are non-recursive)
LOG_FILES= ./logs/access.log,./logs/forever_instructors_only_requests.log, ./logs/forever_student_only_requests.log
APP_NAME= Central-VM
VM_ID=vm-01
BATCH_SIZE=2000
TAIL_FROM_END=0
FLUSH_INTERVAL_MS=500
USE_POLLING=0
# Offset tracking (resume on restart)
STATE_FILE=.offsets.json
RESET_OFFSETS=0
READ_NEW_FILES_FROM_START=1

# Reject nginx paths (comma-separated prefixes)
NGINX_REJECT_PREFIXES=/studentapi,/api

# Payload sizing / compression
MAX_BATCH_BYTES=1000000
USE_GZIP=1

# Reliability / buffering
MAX_BUFFER_ITEMS=20000
MAX_BUFFER_BYTES=20000000
ENABLE_SPOOL=1
SPOOL_DIR=spool
MAX_SPOOL_BYTES=209715200
RETRY_BASE_MS=1000
RETRY_MAX_MS=30000
RETRY_JITTER_MS=250
HTTP_TIMEOUT_MS=10000
